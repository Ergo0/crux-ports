name=lutris
version=0.5.2
release=1
source=(https://lutris.net/releases/lutris_$version.tar.xz)

build() {  
	cd $name 

	/usr/bin/python3 setup.py build

	/usr/bin/python3 setup.py install \
		--prefix=/usr --root=$PKG --optimize=1
	}	


